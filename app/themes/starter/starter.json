{
	"title" : "Starter Theme",
	"author" : "citizenhub",

	"files" : {
		"css" : ["css/bootstrap.min", "css/go", "css/animations"],
		"js" : []
	},

	"routes" : [
		{
			"path" : "/login",
			"template" : "login",
			"controller" : "loginController"
		},
		{
			"path" : "/home",
			"template" : "home",
			"layout" : "layouts/main",
			"controller" : "homeController",
			"id" : "home-page"
		},
		{
			"path" : "/add",
			"template" : "add",
			"layout" : "layouts/main",
			"controller" : "addController",
			"id" : "add-page"
		},
		{
			"path" : "/settings",
			"template" : "settings",
			"layout" : "layouts/main",
			"controller" : "settingsController",
			"id" : "settings-page"
		},
		{
			"path" : "/child/:code",
			"template" : "child",
			"layout" : "layouts/main",
			"controller" : "childController",
			"id" : "child-page"
		},
		{
			"path" : "/completed",
			"template" : "completed",
			"layout" : "layouts/main",
			"controller" : "completedController",
			"id" : "completed-page"
		},
		{ "otherwise" : "/login" }
	]
}